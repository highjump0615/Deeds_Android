<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/landing_image_size"
            android:layout_height="@dimen/landing_image_size"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/landing_kind"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/landing_title_margin"
            android:text="Be Kind"
            android:textSize="@dimen/landing_title_font_size"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/landing_desc_margin"
            android:layout_marginLeft="@dimen/landing_desc_hori_margin"
            android:layout_marginRight="@dimen/landing_desc_hori_margin"
            android:text="@string/landing_kind"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>