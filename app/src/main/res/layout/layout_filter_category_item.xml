<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/filter_cateogry_item_padding"
    android:paddingRight="@dimen/filter_cateogry_item_padding"
    android:paddingTop="@dimen/filter_cateogry_item_vert_padding"
    android:paddingBottom="@dimen/filter_cateogry_item_vert_padding">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="@dimen/filter_cateogry_item_font_size"
        android:layout_centerVertical="true"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>